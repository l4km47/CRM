<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout android:layout_margin="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="Intercom id :" />

        <TextView
            android:id="@+id/txtintercomid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Analog :" />

        <com.rcis.CRM.CustomEditText
            android:id="@+id/txtanalog"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/delete"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Digital :" />

        <com.rcis.CRM.CustomEditText
            android:id="@+id/txtdegital"
            android:drawableRight="@drawable/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:inputType="number"
            android:layout_row="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:hint="Direct lines :" />

        <com.rcis.CRM.CustomEditText
            android:id="@+id/txtdirectlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:hint=""
            android:drawableRight="@drawable/delete"

            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:hint="Notes :" />

        <com.rcis.CRM.CustomEditText
            android:id="@+id/txtintercomnotes"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/delete"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:hint="about site/maintance" />

    </GridLayout>
</GridLayout>